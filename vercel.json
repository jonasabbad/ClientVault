{
  "version": 2,
  "builds": [
    { "src": "client/dist/**", "use": "@vercel/static" },
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/client/dist/index.html" }
  ],
  "functions": {
    "server/index.js": { "maxDuration": 30 }
  }
}
